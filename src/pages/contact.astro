---
import Layout from "~/layouts/Layout.astro";
import Header from "~/components/header";
import { ContactForm } from "~/components/contact-form";
import profile from "~/content/profile/kizuki-aiki.json";
---

<Layout>
  <div class="fixed top-0 left-0 right-0 z-10 w-full">
    <Header client:load />
  </div>

  <main
    class="w-full min-h-screen flex flex-col items-center justify-start bg-[#131313] text-white pt-[20vh] pb-[10vh]"
  >
    <h1 class="text-5xl font-futura_pt mb-12">Contact</h1>

    <ContactForm client:load />
  </main>

  <footer
    class="w-full bg-[#131313] text-white py-20 flex flex-col items-center justify-center gap-8"
  >
    <div class="w-full max-w-4xl h-[1px] bg-white/20 mb-8"></div>
    <div class="flex gap-12">
      {
        profile.socials.map((social) => (
          <a
            href={social.url}
            target="_blank"
            rel="noopener noreferrer"
            class="text-lg font-futura_pt tracking-wider hover:text-white/60 transition-colors"
          >
            {social.label}
          </a>
        ))
      }
    </div>
    <div class="font-futura_pt text-xs tracking-[0.2em] text-white/40 mt-4">
      Â© 2026 Kz Creation
    </div>
  </footer>
</Layout>

<style>
  :global(html),
  :global(body) {
    overflow: auto !important;
  }
</style>
