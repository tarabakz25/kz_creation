---
import Layout from "~/layouts/Layout.astro";
import Header from "~/components/header";

import Icon from "~/assets/images/icon2.webp";
import Catchcopy from "~/assets/catchcopy.svg";
import profile from "~/content/profile/kizuki-aiki.json";

const contents = [
  {
    title: "About",
    content: `
      神山まるごと高専一期生 / 高専プログラミングコンテスト '23 '24 / TwoGate
      Dev Camp 2024 Summer / Hack1グランプリ2025 / JAPAN AI HACKATHON 2025
    `,
  },
  {
    title: "Skills",
    content: `
      フルスタックWeb開発、アイデア企画、アプリ･Webデザイン
    `,
  },
];
---

<Layout>
  <div class="fixed top-0 left-0 right-0 z-10 w-full">
    <Header client:load />
  </div>

  <main
    class="w-full min-h-screen flex flex-col items-center justify-start bg-[#131313] text-white"
  >
    <div class="w-full flex items-center justify-between gap-4 px-64 pt-[30vh]">
      <div class="flex flex-col pl-24 gap-10">
        <div class="flex flex-col">
          <h1 class="text-5xl font-futura_pt">Kizuki Aiki</h1>
          <h2 class="text-xl font-shuei_gothic">
            相木 絆煌 / <span class="font-light tracking-wider font-futura_100"
              >Tokushima && Tokyo</span
            >
          </h2>
        </div>
        <img src={Catchcopy.src} alt="" class="w-auto h-10" />
      </div>

      <img src={Icon.src} alt="icon" class="w-48 h-auto rounded-3xl" />
    </div>

    <div class="w-full flex flex-col gap-12 px-[20vw] py-[30vh]">
      {
        contents.map((content) => {
          return (
            <div key={content.title} class="flex justify-between">
              <div class="text-4xl font-futura_pt">{content.title}</div>
              <div class="text-xl w-[40vw] pt-4 font-shuei_gothic">
                {content.content}
              </div>
            </div>
          );
        })
      }
    </div>
  </main>

  <footer
    class="w-full bg-[#131313] text-white py-20 flex flex-col items-center justify-center gap-8"
  >
    <div class="w-full max-w-4xl h-[1px] bg-white/20 mb-8"></div>
    <div class="flex gap-12">
      {
        profile.socials.map((social) => (
          <a
            href={social.url}
            target="_blank"
            rel="noopener noreferrer"
            class="text-lg font-futura_pt tracking-wider hover:text-white/60 transition-colors"
          >
            {social.label}
          </a>
        ))
      }
    </div>
    <div class="font-futura_pt text-xs tracking-[0.2em] text-white/40 mt-4">
      © 2026 Kz Creation
    </div>
  </footer>
</Layout>

<style>
  :global(html),
  :global(body) {
    overflow: auto !important;
  }
</style>
