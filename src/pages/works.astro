---
import Layout from "~/layouts/Layout.astro";
import Header from "~/components/layouts/Header";
import MotionBackground from "~/components/layouts/MotionBackground";

type Work = {
  name: string;
  url: string;
  image: string;
  tags: string[];
};

const workFiles = await Astro.glob<Work>("../content/works/*.json");
const works = workFiles.map(({ default: work }) => work);
---

<Layout>
  <Header />
  <div
    class="w-full h-full overflow-y-auto overflow-x-hidden pt-24"
    transition:animate="fade"
  >
    <div class="flex flex-col w-full min-h-full">
      <div class="w-full columns-1 space-y-4 mx-auto">
        {
          works.map((work, index) => (
            <div class="break-inside-avoid relative group rounded-xl overflow-hidden">
              <img
                src={work.image}
                alt={work.name}
                class="w-full h-auto object-cover transition-transform duration-500 group-hover:scale-105"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-4 sm:p-6">
                <h2 class="text-white font-eurostile text-lg font-bold transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
                  {work.name}
                </h2>
                <div class="flex flex-wrap gap-2 transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300 delay-75">
                  {work.tags.map((tag) => (
                    <span
                      key={tag}
                      class="text-xs font-futura text-white/90 bg-white/20 px-2 py-1 rounded-full backdrop-blur-md"
                    >
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</Layout>
